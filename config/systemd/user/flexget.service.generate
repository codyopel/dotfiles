[Unit]
Description=Flexget Daemon
After=network.target

[Service]
Type=simple
User=%i
Group=%i
UMask=000
WorkingDirectory=@{XDG_CONFIG_HOME}@/flexget
ExecStartPre=@(type -P bash)@ -c 'if [ -f ".config-lock" ]; then rm -f .config-lock; fi'
ExecStart=@(type -P flexget)@ daemon start
ExecStop=@(type -P flexget)@ daemon stop
ExecReload=@(type -P flexget)@ daemon reload
Restart=on-failure
TimeoutSec=10

[Install]
WantedBy=default.target
